" show line number
set number
set relativenumber

" highlight current line
set cursorline

set nocompatible
syntax on
set showmode
set showcmd
set mouse=a
set encoding=utf-8

" color
set t_Co=256

set autoindent
set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4

" automatic fill
set wrap
set linebreak
set wrapmargin=2

" scroll
set scrolloff=5
set sidescrolloff=15

set laststatus=2
set ruler

" search
set showmatch
set hlsearch
set incsearch
set smartcase

" edit
set spell spelllang=en_us
set nobackup
set noswapfile
set undofile
set backupdir=~/.vim/.backup//
set directory=~/.vim/.swp//
set undodir=~/.vim/.undo//
set autochdir
set noerrorbells
set history=1000
set autoread
set wildmenu
set wildmode=longest:list,full

